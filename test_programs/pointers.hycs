# describe(function pointer args)
fun call(x: ((Int) => Int)*, y: Int): Int {
    (*x)(y)
}
fun pow3(x: Int): Int {
    x ** 3
}
print_int(pow3(3));
print_int(call(&pow3, 3));
# assert([27, 27])